{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "outDir": "lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": false,
    "isolatedModules": true,
    "declaration": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts*"
  ]
}